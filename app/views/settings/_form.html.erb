<%= simple_form_for @setting, html: {class: 'form-inline'} do |f| %>
  <%= f.input :env %>
  <%= f.input :host, label: 'Site domain' %>
  <%= f.input :title, label: 'Site title', input_html: {class: 'input-xxlarge'} %>
  <%= f.input :copyright_holder %>
  <%= f.input :contact_text, input_html: {rows: 10, cols: 40, class: 'input-xxlarge'} %>
  <%= f.input :contact_text_ua, input_html: {rows: 10, cols: 40, class: 'input-xxlarge'} %>
  <h3>External profiles</h3>
  <%= f.input :facebook_account %>
  <%= f.input :instagram_account %>
  <%= f.input :flickr_user_id %>
  <%= f.input :linkedin_account, input_html: {class: 'input-xxlarge'} %>
  <h3>Technical stuff</h3>
  <%= f.input :description, input_html: {class: 'input-xxlarge'} %>
  <%= f.input :google_analytics_account %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
